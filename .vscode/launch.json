    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: wsrv.py",
            "type": "python",
            "request": "launch",
            "program": "wsrv.py",
            "args": [
                "--port",
                "8082",
                "--user",
                "myuser",
                "--password",
                "mypassword",
                "--health_score_watermark",
                "70"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/bin",
            "serverReadyAction": {
                "pattern": "Server listening on",
                "uriFormat": "http://localhost:8081/monitor/health_score",
                "action": "openExternally",
                //"action": "debugWithChrome",
            }
        },
        {
            "name": "Python: serverlist.py",
            "type": "python",
            "request": "launch",
            "program": "serverlist.py",
            "args": [
                "tsch_rz_t_001",
                "w0",
                "--az",
                "1",
                "--id",
                "sh",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/bin",
        },
    ]
}
