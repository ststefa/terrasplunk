    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: wsrv.py",
            "type": "python",
            "request": "launch",
            "program": "wsrv.py",
            "args": ["--port", "8081"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/bin",
            "serverReadyAction": {
                "pattern": "Server listening on",
                "uriFormat": "http://localhost:8081/monitor/health_score",
                "action": "openExternally",
                //"action": "debugWithChrome",
              }
        }
    ]
}
