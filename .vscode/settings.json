{
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.formatting.provider": "yapf",
    //"python.formatting.yapfArgs": ["--style", "{based_on_style: chromium, indent_width: 20}"]

    "terraform.format": {
        //"ignoreExtensionsOnSave": [
